{
  "version": 2,
  "waiters": {
    "PostOperationSuccess": {
      "delay": 1,
      "operation": "APostOperation",
      "maxAttempts": 40,
      "acceptors": [
        {
          "expected": 200,
          "matcher": "status",
          "state": "success"
        },
        {
          "state": "retry",
          "matcher": "status",
          "expected": 404
        },
        {
          "matcher": "pathAny",
          "expected": "baz",
          "argument": "foo.bar",
          "state": "success"
        }
      ]
    }
  }
}
